<resources>
    <style name="AppText">
        <item name="android:textColor">@color/palette_grey_dark</item>
    </style>

    <style name="AppText.Label">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AppText.Overview">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="AppText.Overview.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppText.Overview.Count">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="AppText.AddGroup">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="AppText.AddGroup.NameCard">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="AppButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NamesTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
