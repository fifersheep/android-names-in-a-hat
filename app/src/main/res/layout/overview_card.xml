<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/overview_card_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        style="@style/AppText.Overview.Count"
        tools:text="12"
        tools:ignore="RtlHardcoded"/>

    <TextView
        android:id="@+id/overview_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/overview_card_count"
        style="@style/AppText.Overview.Title"
        tools:text="FanDuel US DFS Android Team"
        tools:ignore="RtlHardcoded"/>

</RelativeLayout>