<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/palette_white"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="uk.lobsterdoodle.namepicker.overview.OverviewActivityFragment">


    <RelativeLayout
        android:id="@+id/add_group_group_name_input_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/add_group_group_name_input_label"
            style="@style/AppText.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="@string/add_group_input_label_name"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:layout_below="@+id/add_group_group_name_input_label"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/add_group_group_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_group_group_name_input_hint"
                tools:text="The Android Team"/>

        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/add_group_name_list_label"
        style="@style/AppText.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/add_group_group_name_input_layout"
        android:text="@string/add_group_label_names"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/add_group_name_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_group_done_button"
        android:layout_below="@id/add_group_name_list_label" />

    <Button
        android:id="@+id/add_group_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/add_group_button_done"
        tools:ignore="RtlHardcoded"/>

</RelativeLayout>